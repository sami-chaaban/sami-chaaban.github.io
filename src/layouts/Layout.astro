---
const {
  title = 'About',
  theme = 'about',
  description = 'Personal site',
  navState = 'full',
} = Astro.props;

const siteTitle = 'Sami Chaaban';
const isNavCompact = navState === 'compact';
const brandLabel = siteTitle;
const brandHref = isNavCompact ? '/software/' : '/';
const navItems = [
  { label: 'About', href: '/' },
  { label: 'Research', href: '/research/' },
  { label: 'Software', href: '/software/' },
  { label: 'CV', href: '/cv/' },
  { label: 'Contact', href: '/contact/' },
];

const currentPath = Astro.url.pathname.replace(/\/$/, '') || '/';
---

<!doctype html>
<html lang="en" data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/site-logo.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/site-logo.png" />
    <link rel="shortcut icon" href="/images/site-logo.png" />
    <link rel="apple-touch-icon" href="/images/site-logo.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | {siteTitle}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Spline+Sans:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body data-nav={navState}>
    <div class="page">
      <header class="site-header">
        <div class="container">
          <div class="nav-wrap">
            <a class="brand" href={brandHref}>
              <img
                class="brand-avatar"
                src="/images/site-logo.png"
                alt=""
                loading="eager"
                decoding="async"
                aria-hidden="true"
              />
              <span class="brand-text">{brandLabel}</span>
            </a>
            <nav class="site-nav" aria-label="Primary" aria-hidden={isNavCompact ? 'true' : undefined}>
              {navItems.map((item) => {
                const itemPath = item.href.replace(/\/$/, '') || '/';
                const isActive = itemPath === currentPath;
                return (
                  <a
                    class={`nav-link ${isActive ? 'is-active' : ''}`}
                    href={item.href}
                    tabindex={isNavCompact ? -1 : undefined}
                  >
                    {item.label}
                  </a>
                );
              })}
            </nav>
          </div>
        </div>
      </header>
      <main class="site-main">
        <slot />
      </main>
      <footer class="site-footer">
        <div class="container footer-inner">
          <span>Based in Cambridge, UK</span>
          <span>Last updated 2026</span>
        </div>
      </footer>
    </div>
    <script>
      const nav = document.querySelector('.site-nav');
      const navWrap = document.querySelector('.nav-wrap');
      const brand = document.querySelector('.brand');
      const activeLink = nav?.querySelector('.nav-link.is-active');
      const navState = document.body?.dataset.nav || 'full';
      let navHasAnimated = false;
      let lastViewportWidth = Math.round(window.innerWidth);

      const alignActiveLink = () => {
        if (!nav || !activeLink) return;
        if (nav.scrollWidth <= nav.clientWidth) return;
        const isMobileNav = window.matchMedia('(max-width: 600px)').matches;
        if (isMobileNav) {
          const firstLink = nav.querySelector('.nav-link');
          if (activeLink === firstLink) {
            nav.scrollLeft = 0;
          } else {
            const centeredLeft = activeLink.offsetLeft - (nav.clientWidth - activeLink.offsetWidth) / 2;
            const maxLeft = Math.max(0, nav.scrollWidth - nav.clientWidth);
            nav.scrollLeft = Math.max(0, Math.min(centeredLeft, maxLeft));
          }
          return;
        }
        const targetLeft = Math.max(0, activeLink.offsetLeft - 8);
        nav.scrollLeft = targetLeft;
      };

      const setNavWidth = () => {
        if (!navWrap || !brand) return;
        const style = getComputedStyle(navWrap);
        const paddingLeft = Number.parseFloat(style.paddingLeft) || 0;
        const paddingRight = Number.parseFloat(style.paddingRight) || 0;
        const containerWidth = navWrap.parentElement?.getBoundingClientRect().width || navWrap.offsetWidth;
        const compactWidth = Math.ceil(brand.offsetWidth + paddingLeft + paddingRight);

        if (navState === 'compact') {
          if (!navHasAnimated) {
            navWrap.style.setProperty('--nav-wrap-max', `${containerWidth}px`);
            requestAnimationFrame(() => {
              navWrap.style.setProperty('--nav-wrap-max', `${compactWidth}px`);
            });
            navHasAnimated = true;
          } else {
            navWrap.style.setProperty('--nav-wrap-max', `${compactWidth}px`);
          }
          return;
        }

        navHasAnimated = false;
        navWrap.style.removeProperty('--nav-wrap-max');
      };

      const onResize = () => {
        const nextViewportWidth = Math.round(window.innerWidth);
        if (nextViewportWidth === lastViewportWidth) return;
        lastViewportWidth = nextViewportWidth;
        requestAnimationFrame(() => {
          alignActiveLink();
          setNavWidth();
        });
      };

      alignActiveLink();
      setNavWidth();
      window.addEventListener('load', () => {
        alignActiveLink();
        setNavWidth();
      }, { once: true });
      window.addEventListener('resize', onResize);
    </script>
  </body>
</html>

<style is:global>
  :root {
    --font-display: 'Space Grotesk', 'Segoe UI', sans-serif;
    --font-body: 'Spline Sans', 'Segoe UI', sans-serif;
    --radius-lg: 24px;
    --radius-md: 16px;
    --radius-sm: 10px;
    --shadow-lg: 0 30px 60px -35px rgba(0, 0, 0, 0.6);
    --shadow-md: 0 20px 40px -30px rgba(0, 0, 0, 0.5);
    --shadow-sm: 0 12px 26px -20px rgba(0, 0, 0, 0.4);
    --grid-gap: clamp(1.5rem, 2vw, 2.5rem);
    --header-offset: 96px;
  }

  [data-theme='about'] {
    --bg: #f6f7fb;
    --bg-2: #e8ecf5;
    --surface: rgba(255, 255, 255, 0.92);
    --surface-2: rgba(240, 244, 252, 0.98);
    --text: #1c2333;
    --muted: #58627a;
    --accent: #4f7cff;
    --accent-2: #2ec4b6;
    --border: rgba(79, 124, 255, 0.26);
    --nav-bg: rgba(246, 247, 251, 0.9);
    --nav-border: rgba(79, 124, 255, 0.2);
  }

  [data-theme='research'] {
    --bg: #0c1024;
    --bg-2: #151a36;
    --surface: rgba(16, 22, 48, 0.92);
    --surface-2: rgba(26, 34, 66, 0.86);
    --text: #f3f4ff;
    --muted: #b7bfdc;
    --accent: #7aa6ff;
    --accent-2: #53f1ff;
    --border: rgba(122, 166, 255, 0.28);
    --nav-bg: rgba(12, 16, 36, 0.7);
    --nav-border: rgba(122, 166, 255, 0.24);
  }

  [data-theme='software'] {
    --bg: #0c1412;
    --bg-2: #172621;
    --surface: rgba(18, 30, 26, 0.92);
    --surface-2: rgba(28, 44, 36, 0.86);
    --text: #f1fbf6;
    --muted: #aec8bd;
    --accent: #2dd4bf;
    --accent-2: #22d3ee;
    --border: rgba(45, 212, 191, 0.3);
    --nav-bg: rgba(12, 20, 18, 0.72);
    --nav-border: rgba(45, 212, 191, 0.24);
  }

  [data-theme='cv'] {
    --bg: #f6f0e6;
    --bg-2: #efe2cf;
    --surface: rgba(255, 255, 255, 0.88);
    --surface-2: rgba(246, 236, 221, 0.95);
    --text: #2a2018;
    --muted: #6a5a4e;
    --accent: #e45e3a;
    --accent-2: #f1a92c;
    --border: rgba(228, 94, 58, 0.3);
    --nav-bg: rgba(246, 240, 230, 0.85);
    --nav-border: rgba(228, 94, 58, 0.2);
    --shadow-lg: 0 24px 60px -30px rgba(71, 47, 24, 0.4);
    --shadow-md: 0 18px 40px -30px rgba(71, 47, 24, 0.3);
    --shadow-sm: 0 8px 20px -16px rgba(71, 47, 24, 0.25);
  }

  [data-theme='contact'] {
    --bg: #f2f6f5;
    --bg-2: #e6efed;
    --surface: rgba(255, 255, 255, 0.92);
    --surface-2: rgba(242, 248, 246, 0.98);
    --text: #1f2a29;
    --muted: #4c5b59;
    --accent: #2f8f83;
    --accent-2: #1f6f9a;
    --border: rgba(47, 143, 131, 0.28);
    --nav-bg: rgba(242, 246, 245, 0.9);
    --nav-border: rgba(47, 143, 131, 0.24);
  }

  [data-theme='tracy'] {
    --bg: #fbfaf7;
    --bg-2: #f4efe6;
    --surface: rgba(255, 255, 255, 0.92);
    --surface-2: rgba(250, 246, 239, 0.98);
    --text: #241e17;
    --muted: #6b5f52;
    --accent: #c0743a;
    --accent-2: #d1a15a;
    --border: rgba(192, 116, 58, 0.18);
    --nav-bg: rgba(251, 250, 247, 0.94);
    --nav-border: rgba(192, 116, 58, 0.16);
    --shadow-lg: 0 26px 60px -30px rgba(46, 30, 14, 0.24);
    --shadow-md: 0 18px 40px -30px rgba(46, 30, 14, 0.18);
    --shadow-sm: 0 10px 24px -18px rgba(46, 30, 14, 0.14);
  }

  @view-transition {
    navigation: auto;
  }

  ::view-transition-old(root) {
    animation: swipe-out 320ms cubic-bezier(0.4, 0, 0.2, 1) both;
  }

  ::view-transition-new(root) {
    animation: swipe-in 320ms cubic-bezier(0.4, 0, 0.2, 1) both;
  }

  @keyframes swipe-in {
    from {
      opacity: 0;
      transform: translateX(-26px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes swipe-out {
    from {
      opacity: 1;
      transform: translateX(0);
    }
    to {
      opacity: 0;
      transform: translateX(26px);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    ::view-transition-old(root),
    ::view-transition-new(root) {
      animation: none;
    }
  }

  * {
    box-sizing: border-box;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
    font-family: var(--font-body);
    background: var(--bg);
    color: var(--text);
  }

  html {
    background: var(--bg);
    scroll-behavior: smooth;
  }

  body {
    background-image:
      radial-gradient(700px circle at 12% -10%, color-mix(in srgb, var(--accent) 55%, transparent) 0%, transparent 60%),
      radial-gradient(700px circle at 90% 10%, color-mix(in srgb, var(--accent-2) 45%, transparent) 0%, transparent 55%),
      linear-gradient(160deg, var(--bg), var(--bg-2));
    position: relative;
    overflow-x: hidden;
  }

  body::before {
    content: '';
    position: fixed;
    inset: 0;
    pointer-events: none;
    background-image: radial-gradient(rgba(255, 255, 255, 0.12) 1px, transparent 1px);
    background-size: 120px 120px;
    opacity: 0.08;
    mix-blend-mode: screen;
    z-index: 0;
  }

  .page {
    position: relative;
    z-index: 1;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  .container {
    width: min(1100px, calc(100% - 2.5rem));
    margin: 0 auto;
  }

  .site-header {
    position: relative;
    z-index: 10;
    padding-top: 0.3rem;
  }

  .nav-wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding: 0.7rem 1.2rem;
    border-radius: 999px;
    background: color-mix(in srgb, var(--nav-bg) 78%, transparent);
    border: none;
    box-shadow: 0 22px 52px -26px rgba(0, 0, 0, 0.5), inset 0 1px 0 rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(14px) saturate(125%);
    -webkit-backdrop-filter: blur(14px) saturate(125%);
    overflow: hidden;
    width: 100%;
    max-width: var(--nav-wrap-max, 1100px);
    transition: max-width 420ms ease, padding 420ms ease, gap 420ms ease;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-family: var(--font-display);
    font-weight: 600;
    letter-spacing: 0.01em;
    flex-shrink: 0;
    white-space: nowrap;
  }

  .brand-avatar {
    display: block;
    width: auto;
    height: 22px;
    max-width: 130px;
    object-fit: contain;
    border: none;
    flex-shrink: 0;
  }



  .site-nav {
    display: flex;
    align-items: center;
    gap: 1.1rem;
    font-size: 0.95rem;
    min-width: 0;
    max-width: 1000px;
    overflow: hidden;
    transition: max-width 360ms ease, opacity 220ms ease, transform 360ms ease;
  }

  .nav-link {
    padding: 0.4rem 0.85rem;
    border-radius: 999px;
    color: var(--muted);
    border: 1px solid transparent;
    transition: color 180ms ease, background 180ms ease, border-color 180ms ease;
  }

  .nav-link:hover,
  .nav-link:focus-visible {
    color: var(--text);
    background: rgba(255, 255, 255, 0.08);
  }

  .nav-link.is-active {
    color: var(--text);
    background: color-mix(in srgb, var(--surface) 68%, transparent);
    border-color: color-mix(in srgb, var(--accent) 32%, var(--nav-border));
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

  body[data-nav='compact'] .nav-wrap {
    gap: 0.6rem;
    padding-left: 0.9rem;
    padding-right: 0.9rem;
    min-width: max-content;
  }

  body[data-nav='compact'] .site-nav {
    max-width: 0;
    opacity: 0;
    transform: translateX(-16px);
    pointer-events: none;
    display: none;
  }

  body[data-nav='compact'] .brand-text {
    display: inline;
    white-space: nowrap;
  }

  .site-main {
    flex: 1;
    padding: 4.5rem 0 5rem;
  }

  .site-footer {
    padding: 2rem 0 3rem;
    color: var(--muted);
    font-size: 0.95rem;
  }

  .footer-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    border-top: 1px solid var(--border);
    padding-top: 1.5rem;
  }

  .hero {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--grid-gap);
    align-items: center;
  }

  .hero h1 {
    font-family: var(--font-display);
    font-size: clamp(2.6rem, 3.2vw, 3.6rem);
    margin: 0 0 1rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.24em;
    font-size: 0.75rem;
    color: var(--accent-2);
    font-weight: 600;
    margin-bottom: 1.2rem;
  }

  .lead {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--muted);
  }

  .cta-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.9rem;
    margin-top: 2rem;
  }

  .btn {
    padding: 0.75rem 1.4rem;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: transform 180ms ease, box-shadow 180ms ease;
  }

  .btn.primary {
    background: linear-gradient(135deg, var(--accent), var(--accent-2));
    color: #09100e;
    box-shadow: var(--shadow-sm);
  }

  .btn.ghost {
    border: 1px solid var(--border);
    color: var(--text);
    background: rgba(255, 255, 255, 0.05);
  }

  .btn:hover,
  .btn:focus-visible {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .panel {
    padding: 2rem;
    border-radius: var(--radius-lg);
    background: var(--surface);
    border: 1px solid var(--border);
    box-shadow: var(--shadow-md);
  }

  .panel.tight {
    padding: 1.5rem;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.3rem;
  }

  .card {
    padding: 1.4rem;
    border-radius: var(--radius-md);
    background: var(--surface-2);
    border: 1px solid var(--border);
    box-shadow: var(--shadow-sm);
  }

  .card h3 {
    margin-top: 0;
    font-family: var(--font-display);
  }

  .meta {
    color: var(--muted);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .chip-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    margin-top: 1.2rem;
  }

  .chip {
    padding: 0.3rem 0.7rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 600;
    color: #0a0d0b;
    background: color-mix(in srgb, var(--accent) 75%, white);
  }

  .split {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--grid-gap);
    margin-top: 3.5rem;
  }

  .list {
    display: grid;
    gap: 1rem;
  }

  .list-item {
    padding: 1.2rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
    background: rgba(255, 255, 255, 0.04);
  }

  @media (max-width: 900px) {
    :root {
      --header-offset: 132px;
    }

    .nav-wrap {
      flex-direction: row;
      align-items: center;
      border-radius: 999px;
    }

    .site-nav {
      flex-wrap: wrap;
    }

    .hero,
    .split {
      grid-template-columns: 1fr;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  @media (max-width: 600px) {
    :root {
      --header-offset: 110px;
    }

    .site-main {
      padding: 3.5rem 0 4rem;
    }

    .site-header {
      padding: 0.6rem 0;
    }

    .nav-wrap {
      padding: 0.5rem 0.7rem;
      gap: 0.6rem;
    }

    .brand-text {
      display: none;
    }

    .site-nav {
      flex-wrap: nowrap;
      gap: 0.6rem;
      font-size: 0.85rem;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scroll-padding-inline: 0.6rem;
    }

    .site-nav::-webkit-scrollbar {
      display: none;
    }

    .nav-link {
      padding: 0.3rem 0.6rem;
      scroll-margin-inline: 0.6rem;
    }

    .footer-inner {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  @media (max-width: 600px) {
    .brand-avatar {
      height: 18px;
      max-width: 108px;
    }
  }
</style>
