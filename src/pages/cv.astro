  <script is:inline>
    (() => {
      const wallet = document.querySelector('[data-cv-wallet]');
      const stack = document.querySelector('[data-cv-wallet-stack]');
      if (!wallet || !stack) return;

      const panels = Array.from(document.querySelectorAll('.panel.tight')).filter((panel) =>
        panel.querySelector(':scope > h2')
      );
      if (!panels.length) return;

      const sections = panels.map((panel, index) => {
        const heading = panel.querySelector(':scope > h2');
        const label = heading ? heading.textContent.trim() : `Section ${index + 1}`;
        if (!panel.id) panel.id = `cv-section-${index + 1}`;

        const card = document.createElement('button');
        card.type = 'button';
        card.className = 'cv-wallet-card';
        card.textContent = label;
        card.addEventListener('click', () => {
          panel.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
        stack.appendChild(card);

        return { panel, card };
      });

      wallet.hidden = false;

      const setWalletWidth = () => {
        const probe = document.createElement('span');
        probe.className = 'cv-wallet-measure';
        document.body.appendChild(probe);

        let widest = 0;
        sections.forEach(({ card }) => {
          probe.textContent = card.textContent || '';
          widest = Math.max(widest, Math.ceil(probe.getBoundingClientRect().width));
        });

        probe.remove();

        const contentPadding = 20;
        const minWidth = 180;
        const hardCap = 380;
        const maxWidth = Math.min(window.innerWidth - 34, hardCap);
        const target = Math.min(maxWidth, Math.max(minWidth, widest + contentPadding));
        wallet.style.setProperty('--cv-wallet-width', `${target}px`);
      };

      let rafId = 0;
      const updateWallet = () => {
        const threshold = window.innerHeight - Math.max(110, Math.round(window.innerHeight * 0.16));
        const upcoming = sections.filter(({ panel }) => panel.getBoundingClientRect().top > threshold);
        const upcomingCount = upcoming.length;

        wallet.classList.toggle('is-empty', upcomingCount === 0);

        sections.forEach((section) => {
          const stackIndex = upcoming.indexOf(section);
          const isUpcoming = stackIndex !== -1;
          section.card.classList.toggle('is-past', !isUpcoming);
          section.card.dataset.stack = isUpcoming ? String(stackIndex) : '-1';
          section.card.style.setProperty('--stack-index', String(isUpcoming ? stackIndex : upcomingCount + 1));
        });
      };

      const scheduleUpdate = () => {
        if (rafId) return;
        rafId = window.requestAnimationFrame(() => {
          rafId = 0;
          updateWallet();
        });
      };

      setWalletWidth();
      updateWallet();
      window.addEventListener('scroll', scheduleUpdate, { passive: true });
      window.addEventListener('resize', () => {
        setWalletWidth();
        scheduleUpdate();
      });
      window.addEventListener(
        'load',
        () => {
          setWalletWidth();
          updateWallet();
        },
        { once: true }
      );
    })();
  </script>
