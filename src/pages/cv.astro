    position: absolute;
    inset: auto 0 0 0;
    width: 100%;
    border: 1px solid color-mix(in srgb, var(--accent) 30%, transparent);
    border-radius: 14px;
    padding: 0.62rem 0.82rem;
    text-align: center;
    font-family: var(--font-display);
    font-size: 0.84rem;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: color-mix(in srgb, var(--text) 94%, white);
    background:
      linear-gradient(
        160deg,
        color-mix(in srgb, var(--surface) 86%, transparent),
        color-mix(in srgb, var(--bg-2) 58%, transparent)
      );
    box-shadow:
      0 16px 34px -22px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.16);
    backdrop-filter: blur(10px) saturate(120%);
    -webkit-backdrop-filter: blur(10px) saturate(120%);
    transform:
      translateY(calc(var(--stack-index, 0) * -1 * var(--stack-step)))
      scale(calc(1 - var(--stack-index, 0) * 0.02))
      rotate(calc((var(--stack-index, 0) - 2) * -0.3deg));
    transform-origin: center bottom;
    opacity: calc(1 - var(--stack-index, 0) * 0.09);
    z-index: calc(20 - var(--stack-index, 0));
    transition: transform 300ms cubic-bezier(0.2, 0.7, 0.2, 1), opacity 220ms ease, filter 220ms ease;
    pointer-events: auto;
    cursor: pointer;
  }

  :global(.cv-wallet:hover .cv-wallet-card:not(.is-past)) {
    --stack-step: 24px;
    opacity: calc(1 - var(--stack-index, 0) * 0.06);
  }

  :global(.cv-wallet-card:hover),
