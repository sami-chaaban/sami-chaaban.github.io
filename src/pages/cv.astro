    transform:
      translateY(calc(var(--stack-index, 0) * -1 * var(--stack-step) - 1px))
      scale(calc(1 - var(--stack-index, 0) * 0.01))
      rotate(calc((var(--stack-index, 0) - 2) * -0.3deg));
    filter: brightness(1.08);
    z-index: calc(20 - var(--stack-index, 0));
  }

  :global(.cv-wallet-card.is-past) {
    opacity: 0;
    transform: translateY(24px) scale(0.97);
    pointer-events: none;
  }

  @media (max-width: 720px) {
    :global(.cv-wallet) {
      width: min(var(--cv-wallet-width, 320px), calc(100vw - 1.3rem));
      bottom: 0.65rem;
