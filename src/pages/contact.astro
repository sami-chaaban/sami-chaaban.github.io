---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Contact"
  theme="contact"
  description="Get in touch with Sami Chaaban."
>
  <section class="container hero">
    <div>
      <p class="eyebrow">Contact</p>
      <h1>Get in touch.</h1>
      <img class="contact-photo" src="/images/contact.jpg" alt="Contact" loading="lazy" decoding="async" />
      <div class="cta-row">
        <a class="btn primary" href="mailto:sami.chaaban@gmail.com">Email me</a>
      </div>
    </div>
    <div class="panel">
      <h2>Details</h2>
      <div class="list" style="margin-top: 1.2rem;">
        <div class="list-item">
          <strong>Email</strong>
          <div class="meta">sami.chaaban@gmail.com</div>
        </div>
        <div class="list-item">
          <strong>Location</strong>
          <div class="meta">Cambridge, UK (GMT)</div>
        </div>
        <div class="list-item">
          <strong>GitHub</strong>
          <div class="meta">
            <a href="https://github.com/sami-chaaban" target="_blank" rel="noreferrer">github.com/sami-chaaban</a>
          </div>
        </div>
        <div class="list-item">
          <strong>LinkedIn</strong>
          <div class="meta">
            <a href="https://www.linkedin.com/in/sami-chaaban/" target="_blank" rel="noreferrer">linkedin.com/in/sami-chaaban</a>
          </div>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  .contact-photo {
    width: 100%;
    max-width: 420px;
    border-radius: var(--radius-lg);
    margin: 1.2rem 0 1.4rem;
    display: block;
    box-shadow: var(--shadow-md);
  }
</style>
