<script>
  const zoomablePubs = document.querySelectorAll('.publication-right-image');
  zoomablePubs.forEach((img) => {
    img.addEventListener('click', () => {
      const isZoomed = img.classList.contains('is-zoomed');
      if (isZoomed) {
        img.classList.remove('is-zoomed');
        return;
      }
      zoomablePubs.forEach((item) => item.classList.remove('is-zoomed'));
      const rect = img.getBoundingClientRect();
      const anchor = rect.left <= window.innerWidth - rect.right ? 'left' : 'right';
      img.dataset.zoomAnchor = anchor;
      img.classList.add('is-zoomed');
    });
  });
</script>

<style>
  .glass-panel {
    background: rgba(255, 255, 255, 0.08);
    background: color-mix(in srgb, var(--text) 6%, transparent);
    border-color: color-mix(in srgb, var(--text) 16%, transparent);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);
  }
  .parallax-hero {
    position: relative;
    overflow: hidden;
    padding: clamp(18rem, 8vh, 20rem) 0 4.5rem;
    width: 100vw;
    margin-left: calc(50% - 50vw);
  }

  .parallax-hero .container {
    position: relative;
    z-index: 1;
  }

  .hero-media {
    position: fixed;
    top: var(--header-offset, 96px);
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    overflow: hidden;
    display: flex;
    align-items: center;
    pointer-events: none;
    background: transparent;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
    object-fit: contain;
    object-position: center;
    transform: translateY(0);
    will-change: transform;
    filter: saturate(1.05);
    opacity: 1;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: none;
  }

  .glass {
    padding: 2rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    background: color-mix(in srgb, var(--surface) 65%, transparent);
    backdrop-filter: blur(16px);
    box-shadow: var(--shadow-md);
  }

  .parallax-hero .hero {
    align-items: flex-start;
  }

  .parallax-hero .card {
    padding: 1rem;
  }

  .parallax-hero .card h3 {
    margin-bottom: 0.4rem;
  }

  .publications-block {
    margin-top: 3.5rem;
  }

  .pub-link {
    margin: 0.35rem 0 1rem;
  }

  @media (max-width: 900px) {
    .parallax-hero {
      padding: 8rem 0 4rem;
    }

    .glass {
      padding: 1.6rem;
    }

    .publications-block {
      margin-top: 3rem;
    }
  }

  @media (max-width: 600px) {
    .parallax-hero {
      padding: 6rem 0 3.5rem;
    }

    .hero-image {
      object-position: top center;
    }
  }

  .publications-block .list-item strong {
    font-size: 1.15rem;
  }

  .publications-block .list-item .meta {
    font-size: 1rem;
  }

  .publication-with-image {
    display: grid;
    grid-template-columns: minmax(0, 160px) minmax(0, 1fr);
    gap: 1.2rem;
    align-items: start;
  }

  .publication-with-right-image {
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 380px);
    gap: 1.2rem;
    align-items: start;
    overflow: visible;
  }

  .publication-side-image {
    width: 140px;
    height: auto;
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
    box-shadow: var(--shadow-sm);
  }

  .publication-right-image {
    display: block;
    width: 100%;
    max-width: 380px;
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
    box-shadow: var(--shadow-sm);
    transition: transform 220ms ease, box-shadow 220ms ease, background-color 220ms ease;
    transform-origin: center;
    cursor: zoom-in;
    position: relative;
    z-index: 1;
    background-color: transparent;
  }

  .publication-with-cover {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .publication-right-image.is-zoomed {
    transform: scale(2);
    box-shadow: var(--shadow-lg);
    z-index: 20;
    background-color: var(--surface);
  }

  .publication-right-image[data-zoom-anchor='left'] {
    transform-origin: left center;
  }

  .publication-right-image[data-zoom-anchor='right'] {
    transform-origin: right center;
  }

  .publication-cover-image {
    width: 140px;
    height: auto;
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
    box-shadow: var(--shadow-sm);
  }

  .publication-text {
    min-width: 0;
  }

  @media (max-width: 900px) {
    .publication-with-image {
      grid-template-columns: 1fr;
    }

    .publication-with-right-image {
      grid-template-columns: 1fr;
    }

    .publication-side-image {
      width: 140px;
    }

    .publication-right-image {
      max-width: 340px;
    }

    .publication-with-cover {
      flex-direction: column;
    }
  }

  .author-highlight {
    color: var(--accent);
    font-weight: 600;
  }
</style>
